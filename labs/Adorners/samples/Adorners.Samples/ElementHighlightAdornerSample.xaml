<Page x:Class="AdornersExperiment.Samples.ElementHighlightAdornerSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:local="using:AdornersExperiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="8">
        <Button Content="Test Button">
            <labs:AdornerLayer.Xaml>
                <Canvas x:Name="AdornerCanvas"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        labs:FrameworkElementExtensions.EnableActualSizeBinding="True"
                        Background="Cyan"
                        IsHitTestVisible="False"
                        Opacity="0.3"
                        Visibility="{x:Bind IsAdornerVisible, Mode=OneWay}">

                    <!--  Horizontal Bound Lines  -->
                    <Line X1="-10000" Y1="0" X2="10000" Y2="0" Stroke="Cyan" StrokeThickness="1" />
                    <!--  TODO: Can't use x:Bind due to Uno bug: https://github.com/unoplatform/uno/issues/7893  -->
                    <Line X1="-10000" Y1="{Binding ElementName=AdornerCanvas, Path=(labs:FrameworkElementExtensions.ActualHeight)}" X2="10000" Y2="{Binding ElementName=AdornerCanvas, Path=(labs:FrameworkElementExtensions.ActualHeight)}" Stroke="Cyan" StrokeThickness="1" />

                    <!--  Vertical Bound Lines  -->
                    <Line X1="0" Y1="-10000" X2="0" Y2="10000" HorizontalAlignment="Left" Stroke="Cyan" StrokeThickness="1" />
                    <Line X1="{Binding ElementName=AdornerCanvas, Path=(labs:FrameworkElementExtensions.ActualWidth)}" Y1="-10000" X2="{Binding ElementName=AdornerCanvas, Path=(labs:FrameworkElementExtensions.ActualWidth)}" Y2="10000" HorizontalAlignment="Right" Stroke="Cyan" StrokeThickness="1" />
                </Canvas>
            </labs:AdornerLayer.Xaml>
        </Button>
        <!--  TODO: Maybe we want to use XAML Behaviors to have PointerEntered on Button and then PointerExit on Adorner to show/hide?  -->
        <TextBlock Text="Click the checkbox to see the highlight." />
    </StackPanel>
</Page>
